pipeline {
  agent any
  options { timestamps() }
  stages {
    stage('Checkout') {
      steps {
        checkout scm
      }
    }
    stage('Build') {
      steps {
        sh 'echo "Building project..."'
      }
    }
    stage('Test') {
      steps {
        sh 'echo "Running tests..."'
      }
    }
    stage('Docker Build') {
      steps {
        sh 'echo "Building Docker image..."'
      }
    }
    stage('Deploy') {
      steps {
        sh 'echo "Deploying to AWS..."'
      }
    }
  }
  post {
    success {
      echo 'Pipeline finished successfully!'
    }
    failure {
      echo 'Pipeline failed!'
    }
  }
}
